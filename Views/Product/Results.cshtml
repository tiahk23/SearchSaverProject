@using SearchSaver.Models
@model List<Product>

<h1>Avalible Products</h1>


@if (Model.Count == 0)
{
    <p>No Products yet.</p>
}
else
{
    <table class="table">
        <tr>
            <th>
                Store
            </th>
            <th>
                Brand
            </th>
            <th>
                Item Type
            </th>
            <th>
                Price
            </th>
            <th>
                Description
            </th>
        </tr>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Store</td>
                <td>@product.Brand</td>
                <td>@product.Category</td>
                <td>$@product.Price</td>
                <td>@product.Description</td>
            </tr>
        }
    </table>
}