@using SearchSaver.Models
@model List<Product>

<h1>Avalible Products</h1>

@if (Model.Count == 0)
{
    <p>No Products match your search.</p>

    <div class="text-center">
        <h1 class="display-4">SEARCH</h1>
        <form method='get' asp-controller="Product" asp-action="Results">
            <input type='text' id="searchTerm" name='searchTerm' />
            <input type='submit' name="submit" value='Find the best price!' />
        </form>
    </div>
}
else
{
    <table class="table">
        <tr>
            <th>
                Store
            </th>
            <th>
                Brand
            </th>
            <th>
                Item Type
            </th>
            <th>
                Price
            </th>
            <th>
                Description
            </th>
        </tr>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Store</td>
                <td>@product.Brand</td>
                <td>@product.Category</td>
                <td>$@product.Price</td>
                <td>@product.Description</td>
            </tr>
        }
    </table>
}